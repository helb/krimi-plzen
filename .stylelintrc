{
    "extends": "stylelint-config-standard",
    "syntax": "scss",
    "rules": {
        "indentation": 4,
        "unit-whitelist": ["em", "rem", "vh", "vw", "%", "s", "px", "deg"],
        "rule-empty-line-before": null,
        "at-rule-empty-line-before": ["always", {
            "except": ["first-nested", "blockless-after-blockless"],
            "ignore": ["after-comment"]
        }]
    }
}
